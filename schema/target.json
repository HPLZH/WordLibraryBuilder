{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "http://webstatic.hplzh.cn/schema/wordlib/target.json",
    "definitions": {
        "path": {
            "type": "string",
            "pattern": "^(?:[a-zA-Z]:[\\\\/]|/)?(?:(?:[^\\\\/:*?\"<>|\\r\\n]+[\\\\/])*[^\\\\/:*?\"<>|\\r\\n]*)?$"
        }
    },
    "type": "object",
    "properties": {
        "src": {
            "oneOf": [
                {
                    "$ref": "#/definitions/path"
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/path"
                    },
                    "minItems": 1
                }
            ]
        },
        "tags": {
            "oneOf": [
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                },
                {
                    "const": "any"
                }
            ],
            "default": "any"
        },
        "exclude": {
            "$ref": "#/definitions/path"
        },
        "filter": {
            "type": "object",
            "properties": {
                "include": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "format": "regex"
                    }
                },
                "exclude": {
                    "$ref": "#/properties/filter/properties/include"
                }
            }
        }
    },
    "required": [
        "src",
        "tags"
    ]
}